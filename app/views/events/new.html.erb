<h1>New Event</h1>
<!-- if event has any errors -->
<% if @event.errors.any? %>
  <div id="error_explanation">
    <!-- show/give (pluraize) the numbers of errors found (refering to @event new method in eventsController) -->
    <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
    <ul>
      <!-- loop through the error messages -->
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!--  create form that fetches the instance variable @event from the eventsController -->
<%= form_for(@event) do |f|  %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :start_date %>
    <%= f.datetime_select :start_date %>
  </div>
  <div>
    <%= f.label :end_date %>
    <%= f.datetime_select :end_date %>
  </div>
  <div>
    <%= f.label :venue %>
    <%= f.text_field :venue %>
  </div>
  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>  
  <%= f.submit %>
<% end %>
